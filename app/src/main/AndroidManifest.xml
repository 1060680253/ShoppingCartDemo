<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.sunxu3074.shoppoingdemo" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.AllActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CategoryDetailsActivity"
            android:label="@string/title_activity_category_details" >
        </activity>
        <activity
            android:name=".activity.ProductDetailsActivity"
            android:label="@string/title_activity_product_details" >
        </activity>
        <activity
            android:theme="@style/activity_animation_style"
            android:name=".activity.AddToCartActivity"
            android:label="@string/title_activity_add_to_cart" >
        </activity>
    </application>

</manifest>
